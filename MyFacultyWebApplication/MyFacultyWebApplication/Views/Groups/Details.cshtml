@model MyFacultyWebApplication.Models.Group

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Specialty.Name)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Піб
                </th>
                <th>
                    Cтатус
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Student student in ViewBag.Students)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(item => student.Name)
                        @Html.DisplayFor(item => student.Surname)
                        @Html.DisplayFor(item => student.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(item => student.Status.Name)
                    </td>
                    <td>
                        <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                        <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id">Details</a> |
                        <a asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
